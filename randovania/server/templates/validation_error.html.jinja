{% extends "page.html.jinja" %}

{% block title %}
	{{ status_message }}
{% endblock %}

{% block header %}
	{{ status_message }}
{% endblock header %}

{% block content %}
	<table class="main-content__body" data-lead-id="main-content-body">
		<tr>
			<th>Type</th>
			<th>Location</th>
			<th>Message</th>
		</tr>
		{% for err in errors %}
			<tr>
				<td>{{ err.type }}</td>
				<td>{{ err.loc }}</td>
				<td>{{ err.msg }}</td>
			</tr>
		{% endfor %}
	</table>
{% endblock content %}
